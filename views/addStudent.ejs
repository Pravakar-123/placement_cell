<!DOCTYPE html>
<html>
<head>
  <title>Beautiful Student Form</title>
  <link rel="stylesheet" href="/css/addStudent.css">
</head>
<body>
  <div class="form-container">
    <div class="form-header">
      <h2 class="form-title">Student Form</h2>
    </div>
    <form method="post" action="addStudent">
      <div class="form-group">
        <label for="name" class="form-label" >Name</label>
        <input type="text" id="name" class="form-input" placeholder="Enter the name" name="name" requierd>
      </div>
      <div class="form-group">
        <label for="email" class="form-label" >Email</label>
        <input type="email" id="email" class="form-input" placeholder="Enter the email" name="email" requied>
      </div>
      <div class="form-group">
        <label for="college" class="form-label" >College Name</label>
        <input type="text" id="college" class="form-input" placeholder="Enter the college name" name="college" requiresd>
      </div>
      <div class="form-group-inline">
        <div class="form-group">
          <label for="status" class="form-label" >Status</label>
          <select id="status" class="form-select" name="status" required>
            <option value="" selected disabled>Select status</option>
            <option value="placed">Placed</option>
            <option value="not-placed">Not Placed</option>
          </select>
        </div>
        <div class="form-group">
          <label for="batch" class="form-label">Batch</label>
          <input type="text" id="batch" class="form-input" placeholder="Enter the batch"  name="batch" required>
        </div>
      </div>
      <div class="form-group-inline">
        <div class="form-group">
          <label for="dsa-score" class="form-label" >DSA Final Score</label>
          <input type="number" id="dsa-score" class="form-input form-input-small" placeholder="DSA" name="dsa_score" required>
        </div>
        <div class="form-group">
          <label for="webd-score" class="form-label">WebD Final Score</label>
          <input type="number" id="webd-score" class="form-input form-input-small" placeholder="WebD"  name="webd_score" required>
        </div>
        <div class="form-group">
          <label for="react-score" class="form-label" >React Final Score</label>
          <input type="number" id="react-score" class="form-input form-input-small" placeholder="React" name="react_score" required>
        </div>
      </div>
      <button type="submit" class="form-button">Submit</button>
    </form>
  </div>
</body>
</html>
