   <link rel="stylesheet" href="/css/studentList.css">
    <title>Document</title>
</head>
<body>
    
    <!-- <a href="#" class="add-button">Add Student</a> -->
  
    <main>

        <div class="studentContainer">
            <div class="studentContainerHeading">
                <h6 class="studentlistHeading">Student List</h6>
                <a href="manageStudent/addStudent" class="add-button">Add Student</a>
                <a href="/" class="add-button">Home</a>
        
            </div>
    
            <div class="list-group studentlist">
              <% for(let i=0;i<result.length;i++) {%>
                <% if(i/2==0){%>
                  <a href="manageStudent/studentDetails/<%= result[i].id %>" class="list-group-item list-group-item-action"><%=  result[i].name%></a>

               <% } else{%>
               
                <a href="manageStudent/studentDetails/<%= result[i].id %>" class="list-group-item list-group-item-action list-group-item-success"><%=  result[i].name%></a>

                <%}%>
             
              <%}%>
               
              </div>

        </div>
        

    </main>
    
      <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
